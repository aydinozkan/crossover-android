<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/activity_vertical_margin"
              tools:context=".gui.fragment.PaymentFragmentDialog">

    <TextView
        android:id="@+id/tvPlaceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/blank_space_margin"
        android:drawableLeft="@drawable/bicycle_marker"
        android:drawablePadding="@dimen/activity_vertical_margin"
        android:drawableStart="@drawable/bicycle_marker"
        android:textColor="@color/place"
        android:textSize="18sp" />

    <com.braintreepayments.cardform.view.CardForm
        android:id="@+id/card_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/card_form_min_height" />

    <Button
        android:id="@+id/btnRent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/blank_space_margin"
        android:text="@string/action_rent"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>
